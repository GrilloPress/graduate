  <div class="container">
    <div class="row">
      <div class="col-md-7">
        <div class="jumbotron-inner">
          <h1>Graduate Management Scheme</h1>
          <p class="lead">Help shape the future of the NHS</p>
          <%= link_to "Find out more", "/index.html#theScheme", class: "btn btn-lg btn-headroom btn-success visible-xs visible-sm" %>
        </div>
      </div>
      
      <div class="col-md-4 col-md-offset-1">
        <div class="card card-colourful card-jumbotron hidden-xs hidden-sm">
          <h2>Apply now</h2>
          <p>
            Are you ready to gain the skills, knowledge and confidence to make real improvements to the NHS?
          </p>
          <a class="btn btn-block btn-wire" href="#apply">Apply now</a>
        </div>
      </div>
    </div>
  </div>
